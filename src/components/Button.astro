---
import GenericButton from './GenericButton.astro';
interface Props {
	text: string;
  className?:string;
  id?:string
  type?: "submit" | "reset" | "button"
}

const { text, className, id, type } = Astro.props;
const classes = ['px-10 py-4 rounded-xl', className ?? '']
---
<GenericButton type={type} text={text} {id} className={classes}/>