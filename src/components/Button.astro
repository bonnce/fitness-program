---
interface Props {
	text: string;
  className?:string;
}

const { text, className } = Astro.props;
---
<button class={`px-10 py-3 text-center bg-ten uppercase rounded-xl hover:bg-yellow-300 active:bg-yellow-700 ${className ?? ''}`}>
  <p class="drop-shadow-text text-white font-normal">
    {text}
  </p>
</button>

<style>
  button{
    transition: background-color .1s ease-out;
  }
</style>