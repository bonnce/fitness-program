---
import Button from "../components/Button.astro";
import ButtonCard from "../components/ButtonCard.astro";
import Card from "../components/Card.astro";
import Lists from "../components/Lists.astro";
import Modal from "../components/Modal.astro";
import Layout from "../layouts/Layout.astro";
const WEEK = ['monday', 'tuesday', 'wednesday','thursday','friday','saturday','sunday']
---

<Layout title="Create a program">
    <main class="pb-16 p-4 flex flex-col items-center min-h-dvh justify-around">
        <h1 class="text-5xl text-center mt-8 mb-24 uppercase">manage your day</h1>
        <div class="w-full flex flex-col gap-2">
        {WEEK.map((day,i)=>(
            <div>
                <Card title={day} index={i+1} subtitle="Programs" />
                <Modal>
                    <Lists items={['Uno','Dos','Tres']} />
                    <ButtonCard text="Save" />
                </Modal>
            </div>
        ))}
        </div>
        <Button className="my-4" text="Create" />
    </main>
</Layout>