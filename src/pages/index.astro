---
import Layout from '../layouts/Layout.astro';
import Circle from '../components/Circle.astro';

---

<Layout title="Welcome to Astro.">
	<main class="pb-16 p-4 flex flex-col items-center">
		<h1 class="text-5xl text-center mt-8 mb-24">TODAY WORKOUT</h1>
		<Circle placeholder='START' >
			<a href="/start">START</a>
		</Circle>
		<form>
			<input type="text" name="name" class="text-black text-2xl">
			<input type="submit" class="border-2 border-white p-4 ">
		</form>
	</main>
</Layout>

<script>
	import { test } from "../utils/db_interactions";
	const form = document.querySelector('form')
	if(form)
	form.onsubmit = function submit(e:SubmitEvent){
		e.preventDefault()
		test(e)
	}
</script>

